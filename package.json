{
  "name": "ocd-js",
  "private": true,
  "version": "0.1.0",
  "description": "Opinionated backend framework workspace for OCD-JS",
  "scripts": {
    "build": "tsc -b",
    "lint": "prettier --write \"{examples,packages}/**/*.ts\" && tsc -b --pretty false",
    "test": "npm run build && node --test \"tests/*.test.js\"",
    "dev": "ocd-dev --entry dist/examples/server/src/main.js --watch examples/server/src"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  }
}
